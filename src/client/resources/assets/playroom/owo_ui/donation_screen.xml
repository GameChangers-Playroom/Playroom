<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="title">
                    <text />
                    <horizontal-text-alignment>center</horizontal-text-alignment>
                    <sizing>
                        <horizontal method="fill">100</horizontal>
                    </sizing>
                    <margins>
                        <top>8</top>
                        <bottom>8</bottom>
                    </margins>
                </label>

                <flow-layout direction="horizontal">
                    <children>
                        <box>
                            <sizing>
                                <vertical method="fixed">2</vertical>
                                <horizontal method="fill">50</horizontal>
                            </sizing>

                            <start-color>#00000000</start-color>
                            <end-color>#FF000000</end-color>

                            <direction>left-to-right</direction>

                            <fill>true</fill>
                        </box>
                        <box>
                            <sizing>
                                <vertical method="fixed">2</vertical>
                                <horizontal method="fill">50</horizontal>
                            </sizing>

                            <start-color>#00000000</start-color>
                            <end-color>#FF000000</end-color>

                            <direction>right-to-left</direction>

                            <fill>true</fill>
                        </box>
                    </children>
                    <horizontal-alignment>center</horizontal-alignment>
                    <sizing>
                        <horizontal method="fill">100</horizontal>
                    </sizing>
                </flow-layout>

                <scroll direction="vertical">
                    <flow-layout direction="vertical" id="rewards">
                        <children>
                        </children>
                        <margins>
                            <top>8</top>
                            <horizontal>32</horizontal>
                        </margins>
                        <padding>
                            <all>4</all>
                        </padding>
                        <sizing>
                            <horizontal method="fill">100</horizontal>
                        </sizing>
                    </flow-layout>
                    <sizing>
                        <horizontal method="fill">100</horizontal>
                        <vertical method="fill">80</vertical>
                    </sizing>
                </scroll>

                <flow-layout direction="vertical">
                    <children>
                        <button id="done">
                            <text translate="true">gui.done</text>
                            <sizing>
                                <horizontal method="fill">90</horizontal>
                            </sizing>
                        </button>
                    </children>
                    <positioning type="relative">50,99</positioning>
                    <margins>
                        <bottom>1</bottom>
                    </margins>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
    <templates>
        <reward>
            <flow-layout direction="horizontal">
                <children>
                    <label id="text">
                        <text/>
                        <shadow>true</shadow>
                        <margins>
                            <top>3</top>
                        </margins>
                    </label>
                </children>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
                <padding>
                    <horizontal>10</horizontal>
                    <vertical>4</vertical>
                </padding>
                <margins>
                    <top>0</top>
                    <right>3</right>
                </margins>
            </flow-layout>
        </reward>
        <staff-reward>
            <flow-layout direction="horizontal">
                <children>
                    <label id="status">
                        <text translate="true">text.playroom.reward.status.unknown</text>
                        <margins>
                            <top>2</top>
                            <right>4</right>
                        </margins>
                        <sizing>
                            <horizontal method="fixed">9</horizontal>
                            <vertical method="fixed">9</vertical>
                        </sizing>
                    </label>
                    <label id="text">
                        <text/>
                        <shadow>true</shadow>
                        <margins>
                            <top>2</top>
                        </margins>
                    </label>
                </children>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
                <padding>
                    <horizontal>10</horizontal>
                    <vertical>4</vertical>
                </padding>
                <margins>
                    <top>0</top>
                    <right>3</right>
                </margins>
            </flow-layout>
        </staff-reward>
    </templates>
</owo-ui>
